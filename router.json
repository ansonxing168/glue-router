{
    "backends": [
        {
            "name": "upload",
            "url": "http://db-and-mid.localdomain:8080/v1/upload/saas-doc",
            "passthroughHeaders": {
                "excludes": ["host", "content-length"]
            }
        },
        {
            "name": "download",
            "url": "http://db-and-mid.localdomain:8080/v1/download/saas-doc",
            "passthroughHeaders": {
                "excludes": ["host", "content-length"]
            }
        },
        {
            "name": "users",
            "url": "http://fanyi.cloudapps.localdomain/apis/uaa/v1/users/query",
            "passthroughHeaders": {
                "excludes": ["host", "content-length"]
            }
        },
        {
            "name": "default",
            "url": "http://fanyi.cloudapps.localdomain",
            "passthroughHeaders": {
                "excludes": ["host", "content-length"]
            }
        }
    ],
    "routes": [
        {
            "frontend": "/upload/saas-doc",
            "backendRef": "upload"
        },
        {
            "frontend": "/download/saas-doc",
            "backendRef": "download"
        },
        {
            "frontend": "/saas-docs/v1/saas-docs",
            "backendRef": "docs",
            "rules": [{
                "src": "content.createdBy",
                "tgt": "createdByMo",
                "backendRef": "users"
            }]
        }
    ]
}